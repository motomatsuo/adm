# Dockerfile para o Backend
FROM node:18-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY backend/package*.json ./
RUN npm ci --only=production

# Copiar código fonte
COPY backend/ ./

# Build TypeScript
RUN npm run build

EXPOSE 3001

# Usar node para rodar o servidor
CMD ["node", "dist/index.js"]
